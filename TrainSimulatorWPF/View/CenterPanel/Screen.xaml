<UserControl x:Class="TrainSimulatorWPF.View.CenterPanel.Screen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainSimulatorWPF.View.CenterPanel"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="400" x:Name="SndScreen">

    <Viewbox Stretch="Uniform">
        <Grid Width="500" Height="320">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <!-- sides -->
            <Rectangle x:Name="Rect_TopLeft" Grid.Column="0" Grid.Row="0" Fill="black"/>
            <Rectangle x:Name="Rect_TopCenter" Grid.Column="1" Grid.Row="0" Fill="black"/>
            <Rectangle x:Name="Rect_TopRight" Grid.Column="3" Grid.Row="0" Fill="#FF676767"/>
            <Rectangle x:Name="Rect_MidRight" Grid.Column="2" Grid.Row="0" Fill="black"/>
            <Rectangle x:Name="Rect_RightMiddle" Grid.Column="2" Grid.Row="1" Fill="black"/>
            <Rectangle x:Name="Rect_BottomLeft" Grid.Column="0" Grid.Row="2" Fill="black"/>
            <Rectangle x:Name="Rect_BottomCenter" Grid.Column="1" Grid.Row="2" Fill="black"/>
            <Rectangle x:Name="Rect_BottomRight" Grid.Column="2" Grid.Row="2" Fill="black"/>
            <Rectangle x:Name="Rect_BottomRight2" Grid.Column="2" Grid.Row="3" Fill="#FF676767"/>
            <Rectangle x:Name="Rect_RightExtra" Grid.Column="3" Grid.Row="2" Fill="#FF676767"/>
            <Rectangle x:Name="Rect_LeftMiddle" Grid.Column="0" Grid.Row="1" Fill="black"/>
            <Rectangle x:Name="Rect_RightMiddle2" Grid.Column="3" Grid.Row="1" Fill="#FF676767"/>
            <Rectangle x:Name="Rect_BottomLeft2" Grid.Column="0" Grid.Row="3" Fill="#FF676767"/>
            <Rectangle x:Name="Rect_BottomCenter2" Grid.Column="1" Grid.Row="3" Fill="#FF676767"/>
            <Rectangle x:Name="Rect_BottomRight3" Grid.Column="3" Grid.Row="3" Fill="#FF676767"/>

            <!-- central screen with speed dial -->
            <Rectangle x:Name="Rect_Screen" Grid.Column="1" Grid.Row="1" Fill="#FF030F20"/>

            <!-- main content of the screen -->
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>

                <!-- Partie gauche: Cadran de vitesse -->
                <Grid Grid.Column="0">
                    <Ellipse x:Name="Ellipse_SpeedDial" Width="140" Height="140" Stroke="Gray" StrokeThickness="2" Fill="Transparent" 
                             HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,17,0,0"/>
                    <TextBlock x:Name="TB_SpeedValue" Text="42" HorizontalAlignment="Left" VerticalAlignment="Top" 
                               Foreground="White" FontSize="35" FontWeight="Bold" Margin="66,59,0,0"/>
                    <TextBlock x:Name="TB_SpeedUnit" Text="km/h" HorizontalAlignment="Left" VerticalAlignment="Top" 
                               Foreground="LightGray" FontSize="15" Margin="145,81,0,0"/>
                    <TextBlock x:Name="TB_Status" Text="15:05  Entering FS" Foreground="White" FontSize="10" Margin="70,178,71,77"/>
                    <TextBlock x:Name="TB_Param" Text="Param" Foreground="Gray" FontSize="10" Margin="185,250,-3,6"/>
                    <TextBlock x:Name="TB_Spec" Text="Spec" Foreground="Gray" FontSize="10" Margin="142,249,40,6"/>
                    <TextBlock x:Name="TB_Override" Text="Override" Foreground="Gray" FontSize="10" Margin="45,249,137,7"/>
                    <TextBlock x:Name="TB_Data" Text="Data" Foreground="Gray" FontSize="10" Margin="99,249,99,7"/>
                    <TextBlock x:Name="TB_Main" Text="Main" Foreground="Gray" FontSize="10" Margin="12,249,186,6"/>
                    <TextBlock x:Name="TB_PowerValue" Text="10" HorizontalAlignment="Left" VerticalAlignment="Top" 
                               Foreground="White" FontSize="20" FontWeight="Bold" Margin="90,116,0,0"/>
                    <TextBlock x:Name="TB_PowerUnit" Text="kW/h" HorizontalAlignment="Left" VerticalAlignment="Top" 
                               Foreground="LightGray" FontSize="10" Margin="137,124,0,0"/>

                    <TextBlock x:Name="TB_DistanceValue" Text="10" HorizontalAlignment="Left" VerticalAlignment="Top" 
                               Foreground="White" FontSize="20" FontWeight="Bold" Margin="90,27,0,0" RenderTransformOrigin="0.514,0.758"/>
                    <TextBlock x:Name="TB_DistanceUnit" Text="Km" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                Foreground="LightGray" FontSize="12" Margin="140,32,0,0"/>

                </Grid>

                <!-- Partie droite: Informations et jauges -->
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="9*"/>
                        <RowDefinition/>
                        <RowDefinition Height="26*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1" Margin="0,0,0,53" Grid.RowSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="121*"/>
                            <ColumnDefinition Width="89*"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle x:Name="Rect_GaugeBackground" Width="20" Height="120" Fill="#FF1E3A5F" Stroke="Gray" StrokeThickness="1"
                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,-34,0,0" Grid.Column="1"/>
                        <Rectangle x:Name="Rect_FuelLevel" Width="16" Height="73" Fill="#FF4A90E2" 
                                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="19,0,0,77" Grid.Column="1"/>
                        <Rectangle x:Name="Rect_WarningLine" Width="25" Height="2" Fill="Yellow" 
                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,36,0,0" Grid.Column="1"/>
                        <TextBlock x:Name="TB_MaxGauge" Text="2000" Foreground="Gray" FontSize="8" Margin="110,10,83,143" Grid.ColumnSpan="2"/>
                        <TextBlock x:Name="TB_MinGauge" Text="0" Foreground="Gray" FontSize="8" Grid.ColumnSpan="2" Margin="119,76,87,76"/>
                        <TextBlock x:Name="TB_MidGauge" Text="1000" Foreground="Gray" FontSize="8" Margin="110,31,83,123" Grid.ColumnSpan="2"/>
                    </Grid>

                    <TextBlock x:Name="TB_Traction" Text="Traction: 60%" Foreground="LightGray" FontSize="8" Margin="49,11,111,31" Grid.Row="3"/>
                    <TextBlock x:Name="TB_Brake" Text="Frein: 0%" Foreground="LightGray" FontSize="8" Margin="49,22,111,21" Grid.Row="3"/>
                    <TextBlock x:Name="TB_Regulator" Text="Régulateur: FS" Foreground="LightGreen" FontSize="8" Margin="49,32,111,10" Grid.Row="3"/>
                    <TextBlock x:Name="TB_MaxSpeed" Text="8000" Foreground="Gray" FontSize="8" Margin="111,22,82,22"/>
                    <TextBlock x:Name="TB_MidSpeed" Text="4000" Foreground="Gray" FontSize="8" Margin="111,39,82,6"/>
                    <TextBlock x:Name="TB_UpArrow" Text="Up ->" Foreground="Gray" FontSize="10" Margin="177,93,0,47" Grid.Row="2" />
                    <TextBlock x:Name="TB_DownArrow" Text="Down ->" Foreground="Gray" FontSize="10" Margin="172,133,0,5" Grid.Row="2" />
                </Grid>

                <TextBlock x:Name="TB_Clock" Grid.Column="1" Text="15:05:49" Foreground="Gray" FontSize="10"
                           HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
            </Grid>

            <!-- right-side buttons -->
            <Grid x:Name="Grid_RightButtons" Grid.Row="1" Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                </Grid.RowDefinitions>

                <Rectangle x:Name="Rect_RightBtn0" Grid.Row="0" Margin="3" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_RightBtn1" Grid.Row="1" Margin="3" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_RightBtn2" Grid.Row="2" Margin="3" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_RightBtn3" Grid.Row="3" Margin="3" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_RightBtn4" Grid.Row="4" Margin="3" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_RightBtn5" Grid.Row="5" Margin="3" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
            </Grid>

            <!-- bottom buttons -->
            <Grid x:Name="Grid_BottomButtons" Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Rectangle x:Name="Rect_BottomBtn0" Grid.Column="0" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn1" Grid.Column="1" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn2" Grid.Column="2" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn3" Grid.Column="3" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn4" Grid.Column="4" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn5" Grid.Column="5" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn6" Grid.Column="6" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn7" Grid.Column="7" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn8" Grid.Column="8" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
                <Rectangle x:Name="Rect_BottomBtn9" Grid.Column="9" Margin="2" Fill="#FF3C3C3C" RadiusX="3" RadiusY="3" Stroke="#FFF7F7F7" StrokeThickness="2"/>
            </Grid>

        </Grid>
    </Viewbox>
</UserControl>
