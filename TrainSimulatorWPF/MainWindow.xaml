<Window x:Class="TrainSimulatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainSimulatorWPF"
        xmlns:screenUC="clr-namespace:TrainSimulatorWPF.View.CenterPanel"
        xmlns:leftPannel="clr-namespace:TrainSimulatorWPF.View.LeftPanel"
        xmlns:bottomPannel="clr-namespace:TrainSimulatorWPF.View.BottomPanel"
        xmlns:rightPannel="clr-namespace:TrainSimulatorWPF.View.RightPanel"
        xmlns:mainScreen="clr-namespace:TrainSimulatorWPF.View.CenterPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1300">
    <Grid>
        <!-- Definition of the 3 main layouts -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <!-- Top panel -->
            <RowDefinition Height="70*"/>
            <!-- Central panel -->
            <RowDefinition Height="20*"/>
            <!-- Bottom panel -->
        </Grid.RowDefinitions>

        <!-- PANEL DU HAUT -->
        <Grid Grid.Row="0">
            <Rectangle Fill="#FF4A4A4E"/>
            <!-- Content of the top panel can be added here -->
        </Grid>

        <!-- PANEL CENTRAL avec 3 colonnes -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <!-- Left Panel -->
                <ColumnDefinition Width="70*"/>
                <!-- Central screen -->
                <ColumnDefinition Width="15*"/>
                <!-- Right Panel -->
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Grid Grid.Column="0">
                <Rectangle Fill="#FF4A4A4E"/>
                <leftPannel:LeftPan x:Name="LeftPanel" />
            </Grid>

            <!-- Central screen -->
            <Grid Grid.Column="1">
                <Rectangle Fill="#FF4A4A4E"/>
                <screenUC:Screen Loaded="Screen_Loaded" x:Name="SndScreen"/>
                <mainScreen:MainScreen x:Name="MainScreen"/>
            </Grid>

            <!-- Right Panel -->
            <Grid Grid.Column="2">
                <Rectangle Fill="#FF4A4A4E"/>
                <rightPannel:RightPan x:Name="RightPanel"/>
            </Grid>
        </Grid>

        <!-- PANEL DU BAS -->
        <Grid Grid.Row="2">
            <Rectangle Fill="#FF4A4A4E"/>
            <bottomPannel:BottomPan x:Name="BottomPanel"/>
        </Grid>


    </Grid>
</Window>